generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  password      String?
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  profiles      Profile[]
  activeProfileId String?  // ID of the currently active profile
  
  // Legacy/Global relations (still kept for data integrity or global admin)
  images        Image[]
  
  // To be deprecated or linked via Profile in logic
  posts         Post[]
  followerSnapshots FollowerSnapshot[]
}

model Profile {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  tiktokName  String?
  bio         String?
  persona     String?  @db.Text
  contentGoal String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  avatarUrl   String?
  followersCount Int      @default(0)
  
  // Relations
  posts       Post[]
  followerSnapshots FollowerSnapshot[]
}

model FollowerSnapshot {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  profileId String?
  profile   Profile? @relation(fields: [profileId], references: [id], onDelete: Cascade)
  
  count     Int
  createdAt DateTime @default(now())
}

model Image {
  id              String   @id @default(cuid())
  humanId         String   @unique // IMG-00001
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  storageUrl      String
  hash            String?  // [NEW] SHA-256 hash
  descriptionLong String   @db.Text
  keywords        String   // JSON string
  mood            String?
  style           String?
  colors          String?  // JSON string
  createdAt       DateTime @default(now())
}

model Post {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  profileId  String?
  profile    Profile? @relation(fields: [profileId], references: [id], onDelete: Cascade)
  
  platform   String   // tiktok, instagram
  hookText   String   @db.Text
  title       String?  @db.Text // [NEW]
  description String?  @db.Text // [NEW]
  slideCount Int?
  slides     String?  @db.Text // JSON with slides script and image refs
  origin     String   @default("generated") // generated, imported
  status     String   @default("draft") // draft, created, published
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  metrics    Metrics?
}

model Metrics {
  id        String   @id @default(cuid())
  postId    String   @unique
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  views     Int      @default(0)
  likes     Int      @default(0)
  shares    Int      @default(0)
  comments  Int      @default(0)
  saves     Int      @default(0)
  updatedAt DateTime @updatedAt
}

model AnalyticsSnapshot {
  id        String   @id @default(cuid())
  date      DateTime @default(now())
  metric    String
  value     Float
}
